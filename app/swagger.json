    }
  },
  "host": "localhost:8080",
  "basePath": "/",
  "tags": [
    {
      "name": "Nomadbees",
      "description": "API used for the site NomadBees"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/authenticate": {
      "post": {
        "tags": [
            "Authentication"
        ],
        "summary": "User login",    
        "parameters":[{
          "in": "body",
          "name": "credentials",
          "description": "user credentials",
          "schema":{
            "type": "object",
            "properties": {
              "username": {
                "type": "string",
                "default": "testUser1"
              },
              "password": {
                "type": "string",
                "default": "password"
              }
            }
          }
        }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400":{
            "description": "Bad request"
          },
          "404":{
            "description": "Not found"
          }
        }
      }
    },
    "/newUser":{
      "post":{
        "tags": ["Signup"],
        "summary": "New user signup",
        "parameters":[{
          "in": "body",
          "name": "Data",
          "description": "Data of the new user profile",
          "schema":{
            "type": "object",
            "properties":{
              "username":{
                "type":"string",
                "default": "newUser1",
                "required": true
              },
              "password":{
                "type":"string",
                "default": "randompassword",
                "required": true
              },
              "mail":{
                "type":"string",
                "default": "test@gmail.com"
              },
              "foto":{
                "type": "string"
              }
            }
          }
        }],
        "responses":{
          "201":{
            "description": "Created",
            "schema":{
              "$ref": "#/definitions/user"
            }
          },
          "400":{
            "description": "Bad request"
          },
          "401":{
            "description": "Unauthorized"
          },
          "500":{
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/searchUser":{
      "get":{
        "tags": ["searchUser"],
        "summary": "Search users",
        "description": "The API is tokenchecked so if token is not in the parameters it returns 401",
        "parameters":[
          {
            "name": "username",
            "in": "query",
            "description": "Username of the user to search",
            "default": "newUser1",
            "required":true
          },
          {
            "name":"token",
            "in":  "query",
            "description": "Token for authorization and info",
            "required": false
          }
        ],
        "responses":{
          "200":{
            "description": "OK",
            "schema":{
              "username":{
                "type": "string"
              }
            }
          },
          "401":{
            "description": "Unauthorized"
          },
          "404":{
            "description": "Not found"
          },
          "400":{
            "description": "Bad request"
          }
        }
      }
    },
    "/editUser":{
      "put":{
        "tags": ["editUser"],
        "summary": "Edit a user profile",
        "description": "The API edits the parameters of a user profile given the one passed in the request, NB: without token it returns 401",
        "parameters":[{
          "in": "body",
          "name": "Data",
          "description": "Data changed of the user profile",
          "schema":{
            "type": "object",
            "properties":{
              "mail":{
                "type":"string",
                "default": "mail.changed@gmail.com"
              },
              "password":{
                "type":"string",
                "default":"newpassword"
              },
              "foto":{
                "type":"string",
                "default":"nefoto"
              },
              "token":{
                "type":"string",
                "default":"insertTokenHere"
              }
            }
          }
        }],
        "responses":{
          "200":{
            "description": "User modified successfully",
            "schema":{
              "$ref": "#/definitions/user"
            }
          },
          "401":{
            "description": "Unauthorized"
          },
          "400":{
            "description": "Bad request"
          }
        }
      }
    },
    "/followUser":{
      "put":{
        "tags": ["followUser"],
        "summary": "Follow another user profile",
        "description": "The API permits to a ueser to follow another one given the username. NB: without token it returns 401",
        "parameters":[{
          "in": "body",
          "name": "Data",
          "description": "Username of the user to follow",
          "schema":{
            "type": "object",
            "properties":{
              "username":{
                "type":"string",
                "default": "newUser1"
              },
              "token":{
                "type":"string",
                "default":"insertTokenHere"
              }
            }
          }
        }],
        "responses":{
          "200":{
            "description": "User modified successfully"
          },
          "401":{
            "description": "Unauthorized"
          },
          "400":{
            "description": "Bad request"
          },
          "404":{
            "description": "Not found"
          },
          "500":{
            "description": "Internal Server Error"
          }
        }
      }
    },
