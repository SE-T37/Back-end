    "/searchViaggio":{
      "get":{
        "tags": ["searchViaggio"],
        "summary": "Search a viaggio",
        "description": "The API permits to search a viaggio",
        "parameters":[{
          "in": "query",
          "name": "titolo",
          "description": "Title of the viaggio",
          "default": "Veneto"
        },
        {
          "in": "query",
          "name": "lunghezzaMin",
          "description": "Minimum legth of the viaggio",
          "default": "0"
        },
        {
          "in": "query",
          "name": "lunghezzaMax",
          "description": "Maximum legth of the viaggio",
          "default": "1000"
        }
        ],
